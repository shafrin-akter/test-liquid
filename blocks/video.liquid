{% liquid 
   assign video_url = block.settings.video_url
%}

<div>
  {% if video_url != blank %}
    <iframe 
      width="100%" 
      height="400" 
      src="{{ video_url | replace: 'watch?v=', 'embed/' }}" 
      frameborder="0" 
      allowfullscreen>
    </iframe>
  {% else %}
    <p>No video available</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Video",
  "settings": [
    {
      "type": "video_url",
      "label": "Video Link",
      "id": "video_url",
      "accepts": ["youtube","vimeo"]
    }
  ],
  "presets": [
    {
      "name": "Video"
    }
  ]
}
{% endschema %}
