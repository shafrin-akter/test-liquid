{% liquid
  assign img = section.settings.image
  assign radius = section.settings.radius
  assign width = section.settings.width
  assign imgWidth = section.settings.imgWidth
  assign imgHeight = section.settings.imgHeight
  assign padding = section.settings.padding
  assign richText = section.settings.richText
  assign fontSize = section.settings.fontSize
  assign textColor = section.settings.textColor
  assign icon = section.settings.icon
  assign icon1 = section.settings.icon1
  assign icon2 = section.settings.icon2
  assign icon3 = section.settings.icon3
  assign btnheading = section.settings.btnheading
  assign align = section.settings.align
  assign btn = section.settings.btn
  assign btn_mback_text = section.settings.btn_mback_text
  assign dolar = section.settings.dolar
  assign safety_img = section.settings.safety_img
  assign logo = section.settings.logo
%}

<div class="flex">
  <div class="content item">
    <div class="subHeading">
      <img class="icon" src="{{ icon | img_url:"1200x"  }}" />
      <p >{{ richText }}</p>
    </div>
    <h1 class="title"><span class="heading1">Fire Captain Approved</span> Emergency Fire Blanket Stops Fire In Its Tracks</h1>
    <p class="Paragrap">Feel prepared & stay calm with our full suite of emergency preparedness solutions.</p>
    <div class="banner_list">
      <div class="list-content">
        <img class="icon1 iconSize" src="{{ icon1 | img_url:"1200px" }}" />
        <p>Compact and Easily Stored</p>
      </div>
      <div class="list-content list-content2">
        <img class="icon1   iconSize" src="{{ icon2 | img_url:"1200px" }}" />
        <p>No Mess Clean Up</p>
      </div>
      <div class="list-content">
        <img class="icon1  iconSize" src="{{ icon3 | img_url:"1200px" }}" />
        <p>Reusable No Expiry</p>
      </div>
    </div>
    <p class="btnheading">{{ btnheading }}</p>
    <div class="btn_container">
      <button class="btn">Get Prepared Today!</button>
    </div>
    <div class="mback_text">
      <img class="dollar" src="{{ dolar | img_url: "1200x" }}" />
      <p class="btn_mback_text">{{ btn_mback_text }}</p>
    </div>
    <div class="banner_safety_strip">
      <img class="safety_img" src="{{ safety_img | img_url: "1200x" }}" />
      <div class="safety_content">
        <h2><span class="banner_safety_red">Active Fire Fighter Matt K.</span> "Fire Elimination Made Easy"</h2>
        <p>Protect your home from fire accidents, giving your family peace of mind.</p>
      </div>
    </div>

    
    
   {% if btn != blank %}
     <button >{{ btn | link_to: 'url' }}</button>

    {% endif %}
    
  </div>
  <div class="image item">
    <img  src="{{ img | img_url:'1200x' }}" alt="Preparedhero"/>
    <img class="logo"  src="{{ logo | img_url:'1200x' }}" alt="logo"/>
  </div>
</div>

<style>
.image {
    position: relative;
}
.image .logo{
  position: absolute;
  left: -13%;
  bottom: 50%;
  width: 130px;
  height: 130px;
  
}
.banner_safety_strip {
    display: flex;
    align-items: center;
    width: 70%;
    gap: 20px;
    margin-top: 30px;
    border: 1px solid #d70000;
    padding: 15px;
    border-radius: 20px;
}
  .banner_safety_strip img{
    width: 106px;
    height: 106px;
    border-radius:10px
  }
  .banner_safety_red{
    color:#d70000;
  }
  .banner_safety_strip h2{
    font-size: 21px;
    font-weight: bold;
    margin: 0 0 5px 0;
    
  }
  .banner_safety_strip p{
    font-size:17px;
    line-height: 24px;
    margin: 0;
  }
  
  #shopify-section-{{section.id}} {
    font-size: {{ fontSize }}px;
    color:{{textColor}};
  }
  .Paragrap{
    font-size:17px;
    width:410px;
    line-height:25px;
    
  }
  .content .subHeading{
    margin:0;
    display:flex;
    align-items: center;
    gap:10px
  }
  .heading1{
    color:#d70000;
    font-weight:bold;
    font-size: 55px;
  }
  .title{
    font-weight:bold;
    font-size: 55px;
    line-height:60px;
    margin:0;
  }
  .flex { 
    display: flex;
    justify-content: center;
    width:{{width}}px;
    gap:0px;
    margin: 0 auto;
    padding: {{padding}}px;
  }

  .content {
    flex-basis:60%;
  }
  .icon{
    width:100px;
    height:16px;
  }
  .banner_list{
    display:flex;
    align-items: center;
  }
 .list-content {
    display: flex;
    align-items: center;
    font-size: 15px;
    gap: 8px;
    line-height: 19px;
    font-weight: bold;
    width: 161px;
    justify-content: center;
    padding: 8px;
}
  .icon1, .icon2, .icon3{
       width: 40px;
  }
  .list-content2{
    border-right: 1px solid gray; 
    border-left: 1px solid gray; 
  }
  .content ul li , .mback_text{
    font-size:14px;
    font-weight:bold;
  }
  .content ul , .mback_text {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 357px;
    padding: 10px 0 0 0;
      
    margin: 0;
 }
.mback_text p {
  list-style:none;
  padding: 0 0 0 0;
      margin: 0;
}
.btn {
    background-color: #d70000;
    color: white;
    font-size: 22px;
    font-weight:bold;
    padding: 17px 65px;
    border: 1px solid #000000;
    border-radius: 10px;
}
  .content .btn_container{
     display:flex;
     justify-content:center;
     width: 357px;
    
  }
  .mback_text img{
        height: 13px;
  }
  

  

  .image img {
    max-width: 100%; /* Ensure the image scales well */
    height: auto;
    border-radius: {{ radius }}px; 
    width:{{imgWidth}}%;
    height:{{imgHeight}}%;
    aspect-ratio: 3/2;
    object-fit:cover;
  }
  
</style>

{% schema %}
  {
    "name": "Preparedhero",
    "settings": [
      {
        "type": "richtext",
        "label": "RichText",
        "id": "richText"
      },
       {
        "type": "range",
        "label": "Font Size",
        "id": "fontSize",
        "min": 0,
        "max": 100,
        "unit": "px",
        "default": 10,
        "step": 1
      },
      {
        "type": "color",
        "label": "Text Color",
        "id": "textColor"
      },
      {
        "type": "image_picker",
        "label": "icon",
        "id": "icon"
      },
      {
        "type": "image_picker",
        "label": "Icon One",
        "id": "icon1"
      },
      {
        "type": "image_picker",
        "label": "Icon Two",
        "id": "icon2"
      },
      {
        "type": "image_picker",
        "label": "Icon Three",
        "id": "icon3"
      },
      {
        "type": "image_picker",
        "label": "Logo",
        "id": "logo"
      },
      {
        "type": "richtext",
        "label": "button Heading",
        "id": "btnheading"
      },
      {
        "type": "text_alignment",
        "label": "Text Align",
        "id": "align"
      },
      {
        "type": "url",
        "label": "Button",
       "id": "btn"
      },
      {
        "type": "richtext",
        "label": "Mback Text",
        "id": "btn_mback_text"
      },
      {
        "type": "image_picker",
        "label": "Dollar",
        "id": "dolar"
      },
      {
        "type": "image_picker",
        "label": "Safety Img",
        "id": "safety_img"
      },
      


      
      {
        "type": "image_picker",
        "label": "Upload Image",
        "id": "image"
      },
      {
        "type": "range",
        "label": "Radius",
        "id": "radius",
        "min": 0,
        "max": 100,
        "unit": "px",
        "default": 10,
        "step": 1
      },
      {
        "type": "range",
        "label": "Image Width",
        "id": "imgWidth",
        "min": 0,
        "max": 100,
        "unit": "%",
        "default":100,
        "step": 1
       },
      {
        "type": "range",
        "label": "Image Height",
        "id": "imgHeight",
        "min": 0,
        "max": 100,
        "unit": "%",
        "default":100,
        "step": 1
       },
      {
        "type": "range",
        "label": "Section Padding",
        "id": "padding",
        "min": 0,
        "max": 100,
        "unit": "px",
        "default":10,
        "step": 1
       },
      {
        "type": "select",
        "label": "Section Width",
        "id": "width",
        "options": [
          {
            "label": "Full Width",
            "value": "100%"
          },
          {
            "label": "content",
            "value": "1200"
          },
          {
            "label": "Narrow",
            "value": "900"
          },
          {
            "label": "Supper Narrow",
            "value": "700"
          }
        ]
        
      }
     
    ],
      "presets": [
      {
        "name": "PreparedHero"
      }
    ]
  }
{% endschema %}
